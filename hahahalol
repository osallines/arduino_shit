void setup()
{
  digitalWrite(D1[0],HIGH);
  digitalWrite(D2[0],HIGH);
  digitalWrite(D3[0],HIGH);
  digitalWrite(E4[0],HIGH);
  Serial.begin(9600);
  BlueTooth.begin(9600);  
}
